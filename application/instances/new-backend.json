{
  "$schema": "https://docs.facets.cloud/schemas/application/instances/application.schema",
  "kind": "service",
  "flavor": "application",
  "disabled": true,
  "apiVersion": "v3",
  "metadata": {
    "labels": {
      "sidecar.istio.io/inject": "true"
    }
  },
  "spec": {
    "env": {
      "DB_CONECTION": "${mongo.my-mongo.interfaces.writer.host}"
    },
    "loadbalancing": {
      "rules": []
    },
    "permission": [],
    "release": {
      "strategy": "RollingUpdate",
      "build": {
        "artifactory": "default",
        "name": "backend-1234"
      }
    },
    "runtime": {
      "size": {
        "value": "large",
        "namespace": "GP"
      },
      "autoscaling": {
        "cpuThreshold": "50",
        "max": 7,
        "min": 9
      },
      "ports": [
        {
          "name": "port8080",
          "port": 80
        }
      ]
    }
  }
}