{   "kind": "kafka",
	"flavor": "k8s",
	"lifecycle": "ENVIRONMENT",
	"metadata": {
		"name": "<kafka-name>"
	},
	"depends_on": [],
	"provided": false,
	"disabled": false,
	"version": "latest",
	"spec": {
		"authenticated": false,
		"kafka_version": "2.8.0",
		"persistence_enabled": true,
		"size": {
			"zookeeper": {
				"cpu": "1",
				"memory": "1G",
				"replica_count": 1,
				"volume": "10Gi"
			},
			"kafka": {
				"cpu": "1",
				"memory": "1G",
				"replica_count": 1,
				"volume": "10Gi"
			}
		}
	}
}
